<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".dashboard">


  <HorizontalScrollView
      android:id="@+id/horizontalScrollView"
      android:layout_width="432dp"
      android:layout_height="131dp"
      android:layout_marginBottom="20dp"
      app:layout_constraintBottom_toTopOf="@+id/textView5"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView4"
      app:layout_constraintVertical_bias="0.465"
      tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/rec1"
          android:layout_width="122dp"
          android:layout_height="124dp"
          android:layout_marginRight="20dp"
          android:contentDescription="TODO"
          android:src="@drawable/rec4"></ImageView>

      <ImageView
          android:id="@+id/rec2"
          android:layout_width="122dp"
          android:layout_height="124dp"
          android:layout_marginRight="20dp"
          android:contentDescription="TODO"
          android:src="@drawable/rec3"></ImageView>

      <ImageView
          android:id="@+id/rec4"
          android:layout_width="122dp"
          android:layout_height="124dp"
          android:layout_marginRight="20dp"
          android:contentDescription="TODO"
          android:src="@drawable/rec2"
          tools:ignore="DuplicateIds"></ImageView>

      <ImageView
          android:id="@+id/rec3"
          android:layout_width="122dp"
          android:layout_height="124dp"
          android:layout_marginRight="20dp"
          android:contentDescription="TODO"
          android:src="@drawable/r4"></ImageView>
    </LinearLayout>
  </HorizontalScrollView>

  <androidx.cardview.widget.CardView
      android:id="@+id/cardView"
      android:layout_width="320dp"
      android:layout_height="40dp"
      android:layout_margin="10dp"
      android:translationX="10dp"
      android:translationY="-50dp"
      app:cardBackgroundColor="#FFD08A"
      app:cardCornerRadius="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.1">

    <SearchView

        android:id="@+id/searchView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#FFD08A"
        android:clickable="true"
        android:inputType="text"
        android:translationX="-20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" >

      <Button
          android:id="@+id/button20"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Button" />
    </SearchView>
  </androidx.cardview.widget.CardView>

  <TextView
      android:id="@+id/textView4"
      android:layout_width="272dp"
      android:layout_height="40dp"
      android:layout_marginStart="15dp"
      android:layout_marginTop="104dp"
      android:layout_marginEnd="100dp"
      android:text="Recently Viewed"
      android:textColor="#FF9800"
      android:textSize="29sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.083"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="147dp"
      android:layout_height="36dp"
      android:layout_marginStart="12dp"
      android:layout_marginTop="2dp"
      android:layout_marginEnd="200dp"
      android:layout_marginBottom="1dp"
      android:text="Saved"
      android:textColor="#FF9800"
      android:textSize="29sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.153"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView4"
      app:layout_constraintVertical_bias="0.887" />

  <Button
      android:id="@+id/button16"
      android:layout_width="42dp"
      android:layout_height="44dp"
      android:background="#00FFFFFF"
      android:foreground="@drawable/ic_group"
      android:translationX="125dp"
      app:backgroundTint="#00FFFFFF"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.976"
      tools:ignore="SpeakableTextPresentCheck" />

  <Button
      android:id="@+id/button17"
      android:layout_width="42dp"
      android:layout_height="44dp"
      android:background="#00FFFFFF"
      android:backgroundTint="#00FFFFFF"
      android:foreground="@drawable/ic_food"
      android:translationX="10dp"
      android:onClick="recipe"
      app:backgroundTint="#F6F1F1"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.071"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.976"
      tools:ignore="SpeakableTextPresentCheck" />

  <Button
      android:id="@+id/button18"
      android:layout_width="42dp"
      android:layout_height="44dp"
      android:background="#00FFFFFF"
      android:backgroundTint="#00FFFFFF"
      android:onClick="recipe1"
      android:foreground="@drawable/ic_account"
      android:translationX="230dp"
      app:backgroundTint="#F8F5F5"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.16"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.976"
      tools:ignore="OnClick, SpeakableTextPresentCheck" />

  <HorizontalScrollView
      android:id="@+id/horizontalScrollView2"
      android:layout_width="415dp"
      android:layout_height="130dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.707"
      tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">


      <ImageView
          android:id="@+id/i1"
          android:layout_width="122dp"
          android:layout_height="124dp"
          android:layout_marginRight="20dp"
          android:contentDescription="TODO"
          android:maxHeight="500dp"
          android:src="@drawable/ind3"></ImageView>

      <ImageView
          android:id="@+id/i2"
          android:layout_width="122dp"
          android:layout_height="124dp"
          android:layout_marginRight="20dp"
          android:contentDescription="TODO"
          android:src="@drawable/ind1"></ImageView>

      <ImageView
          android:id="@+id/i3"
          android:layout_width="122dp"
          android:layout_height="124dp"
          android:layout_marginRight="20dp"
          android:contentDescription="TODO"
          android:src="@drawable/ind2"></ImageView>

      <ImageView
          android:id="@+id/i4"
          android:layout_width="122dp"
          android:layout_height="124dp"
          android:layout_marginRight="20dp"
          android:contentDescription="TODO"
          android:src="@drawable/ind2"></ImageView>


    </LinearLayout>
  </HorizontalScrollView>

  <Button
      android:id="@+id/button21"
      android:layout_width="189dp"
      android:layout_height="45dp"
      android:backgroundTint="#FF9800"
      android:onClick="new_dish"
      android:text="Create Dish"
      app:layout_constraintBottom_toTopOf="@+id/button16"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2"
      tools:ignore="OnClick" />

</androidx.constraintlayout.widget.ConstraintLayout>