<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p3"
    tools:context=".trivia3">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="328dp"
        android:layout_height="97dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="290dp"
        android:layout_marginBottom="360dp"
        android:fontFamily="casual"
        android:text="Your preference in the  following question?"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        android:translationY="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/font3"
        android:layout_width="286dp"
        android:layout_height="81dp"
        android:layout_marginLeft="-270dp"
        android:layout_marginTop="212dp"
        android:autoText="false"
        android:fontFamily="casual"
        android:text="QUICK QUESTION:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#100A0A"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:translationX="-10dp"
        android:translationY="30dp"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button6"
        android:layout_width="124dp"
        android:layout_height="114dp"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/rounded_button"
        android:foreground="@drawable/indian1234"
        android:onClick="choice"
        android:text="indian"
        android:textColor="#000000"
        android:textSize="16sp"
        android:tooltipText="indian"
        android:translationX="-30dp"
        android:translationY="70dp"
        app:backgroundTint="#54FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.916"
        tools:ignore="UsingOnClickInXml" />


    <Button
        android:id="@+id/button7"
        android:layout_width="129dp"
        android:layout_height="120dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/rounded_button"
        android:foreground="@drawable/italiancropmodified"
        android:freezesText="true"
        android:onClick="choice"
        android:text="italian"
        android:textColor="#000000"
        android:textSize="16sp"
        android:tooltipText="italian"
        android:translationX="-30dp"
        android:translationY="70dp"
        app:backgroundTint="#5CFFFEFD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.805"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.626"
        app:rippleColor="#090808"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/button8"
        android:layout_width="123dp"
        android:layout_height="113dp"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/rounded_button"
        android:foreground="@drawable/chinese1234"
        android:onClick="choice"
        android:text="chinese"
        android:textColor="#000000"
        android:textSize="16sp"
        android:tooltipText="chinese"
        android:translationX="-30dp"
        android:translationY="70dp"
        app:backgroundTint="#54FFFFFE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button9"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.861"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/button9"
        android:layout_width="131dp"
        android:layout_height="114dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/rounded_button"
        android:foreground="@drawable/american1234"
        android:onClick="choice"
        android:text="american"
        android:textColor="#000000"
        android:textSize="16sp"
        android:tooltipText="american"
        android:translationX="-30dp"
        android:translationY="70dp"
        app:backgroundTint="#54FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:layout_constraintVertical_bias="0.258"
        tools:ignore="UsingOnClickInXml" />
</LinearLayout>